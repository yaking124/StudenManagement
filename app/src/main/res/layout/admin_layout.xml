<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="欢迎来到"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="学生管理系统"
        android:textSize="20sp" />

    <com.example.he.studenmanagement.tools.RoundImageView
        android:id="@+id/pic"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/tv1"
        android:src="@drawable/admin_photo" />

    <Button
        android:id="@+id/admin_activity_select"
        style="@style/common_button_style"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:background="#3F51B5"
        android:text="查询学生信息" />


    <Button
        android:id="@+id/admin_activity_add"
        style="@style/common_button_style"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_activity_select"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:text="添加学生信息" />


    <Button
        android:id="@+id/admin_activity_order"
        style="@style/common_button_style"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_activity_add"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="#3F51B5"
        android:gravity="center"
        android:text="查看总成绩排名" />

    <TextView
        android:id="@+id/admin_activity_forceOffline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="强制下线"
        android:textColor="@color/vertical_sep_color"/>


</RelativeLayout>